<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".login"
    android:background="@drawable/backgroundlogin">

    <TextView
        android:id="@+id/txtheader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="KSK TRUST"
        android:textColor="@color/white"
        android:textSize="50dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:layout_marginTop="50dp"



        />
    <EditText
        android:id="@+id/logUsername"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtheader"
        android:hint="Enter Username"
        android:textColorHint="@color/white"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="70dp"
        android:inputType="text"
        android:textColor="@color/white"
        android:maxLines="1"
        android:minLines="1"



        />

    <EditText
        android:id="@+id/logPassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/logUsername"
        android:hint="Enter Password"
        android:textColorHint="@color/white"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:maxLines="1"
        android:minLines="1"
        android:inputType="textPassword"
        android:textColor="@color/white"
        />

    <Switch
        android:id="@+id/switchlogin"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Remember Me   "
        android:textColor="@color/white"
        android:textStyle="italic"
        android:layout_below="@+id/logPassword"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"




        />


    <Button
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/switchlogin"
        android:layout_marginRight="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="40dp"
        android:text="LOG IN"
        android:textSize="18sp"
        android:textStyle="bold"
        android:background="#808080"
        android:textColor="@color/white"





        />

    <TextView
        android:id="@+id/gotoSignUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New User? Click Here To Sign Up!"
        android:layout_below="@+id/login"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:textStyle="bold"

        />


</RelativeLayout>